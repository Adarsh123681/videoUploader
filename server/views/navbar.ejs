<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar</title>
  <!-- Include Tailwind CSS -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body>
  <nav class="bg-gray-800 p-6">
    <div class="container mx-auto flex justify-between items-center">
      <div>
        <a href="#" class="text-white text-2xl font-bold">My Website</a>
      </div>
      <div class="hidden md:block">
        <a href="/" class="text-gray-300 hover:text-white px-4">Home</a>
        <a href="/uploadVideo" class="text-gray-300 hover:text-white px-4">UploadVideo</a>
        <a href="/getAllVideo" class="text-gray-300 hover:text-white px-4">GetAllVideo</a>
        <a href="/register" class="text-gray-300 hover:text-white px-4">Register</a>
        <a href="/logIn" class="text-gray-300 hover:text-white px-4">LogIn</a>
      </div>
      <div class="md:hidden">
        <button class="text-white focus:outline-none">
          <svg class="h-6 w-6" fill="none" strokeh="currentColor" viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Responsive Navigation Menu -->
  <div class="md:hidden bg-gray-800">
    <div class="px-2 py-3">
      <a href="/" class="text-gray-300 hover:text-white px-4">Home</a>
      <a href="/ploadVideo" class="text-gray-300 hover:text-white px-4">UploadVideo</a>
      <a href="/getAllVideo" class="text-gray-300 hover:text-white px-4">GetAllVideo</a>
      <a href="/register" class="text-gray-300 hover:text-white px-4">Register</a>
      <a href="/logIn" class="text-gray-300 hover:text-white px-4">LogIn</a>
    </div>
  </div>

  <script>
    document.querySelector('nav button').addEventListener('click', function () {
      document.querySelector('.md\\:hidden').classList.toggle('hidden');
    });
  </script>
</body>

</html>